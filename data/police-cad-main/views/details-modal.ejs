<div
  id="detailsModal"
  class="modal fade"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content bg-dark text-white">
      <div class="modal-body">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <a href="javascript:void(0)" onclick="goBack()">
            <i class="fa fa-chevron-left text-white"></i>
          </a>
          <h4 id="detailsTitle" class="m-0">Details</h4>
          <button
            type="button"
            class="btn btn-primary btn-md"
            data-dismiss="modal"
            aria-hidden="true"
            onPress="hideModal('searchDatabaseModal');hideModal('detailsModal')"
          >
            X
          </button>
        </div>
        <hr style="width: 88%; max-width: 100rem; border-color: #444" />

        <!-- Loading Indicator -->
        <div id="detailsLoading" class="text-center">
          <div id="loadingStatuses" class="list-group"></div>
        </div>

        <!-- Content -->
        <div id="detailsContent" style="display: none">
          <!-- Image -->
          <div class="text-center mb-4">
            <img
              id="detailsImage"
              class="rounded-circle"
              style="width: 160px; height: 160px; border: 4px solid #000"
              alt="Profile"
            />
          </div>

          <!-- Details -->
          <div id="detailsInfo"></div>

          <!-- Linked Items (Civilian Only) -->
          <div id="linkedItems" class="mt-4"></div>

          <!-- Main Tabs -->
          <div id="mainTabs" class="mb-3" style="display: flex; gap: 1.5rem; border-bottom: 1px solid #444;">
            <button id="tabCriminalHistory" class="records-tab-btn active" type="button" style="background: none; border: none; color: #fff; font-weight: 600; font-size: 1.1rem; padding: 0.5rem 1rem; border-bottom: 3px solid #667eea;">Criminal History</button>
            <button id="tabLicenses" class="records-tab-btn" type="button" style="background: none; border: none; color: #a0aec0; font-weight: 600; font-size: 1.1rem; padding: 0.5rem 1rem; border-bottom: 3px solid transparent;">Licenses</button>
            <button id="tabVehicles" class="records-tab-btn" type="button" style="background: none; border: none; color: #a0aec0; font-weight: 600; font-size: 1.1rem; padding: 0.5rem 1rem; border-bottom: 3px solid transparent;">Vehicles</button>
            <button id="tabFirearms" class="records-tab-btn" type="button" style="background: none; border: none; color: #a0aec0; font-weight: 600; font-size: 1.1rem; padding: 0.5rem 1rem; border-bottom: 3px solid transparent;">Firearms</button>
          </div>
          
          <!-- Criminal History Tab Content -->
          <div id="tabContentCriminal" class="records-tab-content" style="display: block;">
            <!-- Criminal History (Civilian Only) -->
            <div id="criminalHistory" class="mt-4"></div>
            <!-- Arrest Reports (Civilian Only) -->
            <div id="arrestReports" class="mt-4"></div>
          </div>
          
          <!-- Licenses Tab Content -->
          <div id="tabContentLicenses" class="records-tab-content" style="display: none;">
            <div id="licensesContent" class="mt-4">
              <h5 class="text-white mb-2">Licenses</h5>
              <div id="licensesList"></div>
            </div>
          </div>
          
          <!-- Vehicles Tab Content -->
          <div id="tabContentVehicles" class="records-tab-content" style="display: none;">
            <div id="vehiclesContent" class="mt-4">
              <h5 class="text-white mb-2">Registered Vehicles</h5>
              <div id="vehiclesList"></div>
            </div>
          </div>
          
          <!-- Firearms Tab Content -->
          <div id="tabContentFirearms" class="records-tab-content" style="display: none;">
            <div id="firearmsContent" class="mt-4">
              <h5 class="text-white mb-2">Registered Firearms</h5>
              <div id="firearmsList"></div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div id="actionButtons" class="mt-4"></div>
        </div>
      </div>
    </div>
  </div>
</div>

